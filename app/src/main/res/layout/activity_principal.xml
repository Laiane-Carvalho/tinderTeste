<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientebackgoundtelastinder"
    tools:context="testeadapt3.cursoandroid2.com.mytinder.PaginaPrinActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/picturePerfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/namePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teste"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:foregroundGravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/botaoSairprincipalId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="sair"
        android:layout_margin="50dp"
        android:onClick="desconectar"
        android:background="@drawable/backgroundbordasarredondadas"/>


</LinearLayout>

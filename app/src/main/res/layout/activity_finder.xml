<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meuLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientebackgoundtelastinder"
    android:orientation="vertical"
    tools:context="testeadapt3.cursoandroid2.com.mytinder.FinderActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar"></include>

    <LinearLayout
        android:id="@+id/layoutlUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/includeToolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagemFotoPerfilFaceId"
            android:layout_width="90dp"
            android:layout_height="90dp"
             />

        <TextView
            android:id="@+id/namePerfilUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="teste"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNomes"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconeID"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/favourite_accept" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutlUser"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagem1Cima"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/flor" />

        <ImageView
            android:id="@+id/imagem2Baixo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/flor1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewNomes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutPictures"
        android:gravity="center"
        android:text="texto"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientebackgoundtelastinder"
    android:orientation="vertical"
    tools:context="testeadapt3.cursoandroid2.com.mytinder.CadastroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/foguinho" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/cadastrarNomeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/backgroundbordasarredondadas"
                    android:gravity="center"
                    android:hint="Digite seu nome"
                    android:inputType="text"
                    android:padding="5dp"
                    android:imeOptions="actionDone"
                    android:textColor="@color/corNomes"
                    android:textColorHint="@color/corNomes"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/cadastrarEmailIdD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/backgroundbordasarredondadas"
                    android:gravity="center"
                    android:hint="Digite seu E-mail"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:imeOptions="actionNext"
                    android:textColor="@color/corNomes"
                    android:textColorHint="@color/corNomes"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/cadastrarSenhaId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/backgroundbordasarredondadas"
                    android:gravity="center"
                    android:hint="Digite sua senha"
                    android:inputType="textPassword|numberPassword"
                    android:imeOptions="actionGo"
                    android:padding="5dp"
                    android:textColor="@color/corNomes"
                    android:textColorHint="@color/corNomes"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/botaConcluiCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroundbordasarredondadas"
                    android:text="Cadastrar"
                    android:textColor="@color/corNomes"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
